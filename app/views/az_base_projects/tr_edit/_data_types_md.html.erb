h3. <%= t(:az_label_data_types) %>

<% data_types.each do |t| -%>

h4. <%= h(t.name) %>

<%= n2e t.description %>

<%= render :partial => '/az_struct_data_types/variables_list1_md', :locals => {:struct => t, :permitted_to_edit => permitted_to_edit} %>
<% used_collections = t.collections.select{|c| c.typed_pages.size > 0} -%>
<% if used_collections.size > 0 -%>
h5. <%= t(:az_label_no_data_type_lists) %>

<% used_collections.each do |collection| -%>
h6. <%= h(collection.name) %>

<% if collection.description.size > 0 -%>
<%= n2e collection.description %>
<% else -%>
<%= t(:az_label_no_description) %>
<% end -%>
<% end -%>
<% end -%>
<% end -%>

h3. <%= t(:az_label_validators) %>

<% val_num = 0 -%>
<% validators.each do |v| -%>
h4. <%= v.name %>

<%= v.description %>

<% if val_num == 0 -%>
<%= t(:az_label_data_type_validation_error_first) %>:
<% else -%>
<%= t(:az_label_data_type_validation_error_other) %>::
<% end -%>

_<%= v.message %>_
<% val_num += 1 -%>
<% end -%>
