<table class="table"  style="margin: 0; width: 415px;">
  <tr>
    <th>Переменная</th>
    <th><%= link_to 'Кладовка', az_validators_path %></th>
  </tr>
  <tr>
    <td style="vertical-align: top; padding: 5px;">
      <div style="overflow: auto; height: 200px;">
        <table>
          <% variable.az_validators.each do |validator| %>
            <tr>
              <td>
                <%= link_to h(validator.name), :controller => 'az_validators', :action => 'edit', :id => validator.id %><br/>
              </td>
              <td style="padding: 2px;">
                <% remote_form_for(variable, :url => {:controller => 'az_variables', :action => 'remove_validator', :id => variable.id, :validator_id => validator.id}, :update => "variable-validators-holder") do %>
                  <%= submit_tag 'X', {:class=>'remove-validator', :title=>"Удалить валидатор от переменной" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </td>
    
    <td style="vertical-align: top; padding: 5px;">
      <div style="overflow: auto; height: 200px;">
        <table>
          <% @validtors.each do |validator| %>
            <tr>
              <td style="padding: 2px;">
                <% remote_form_for(variable, :url => {:controller => 'az_variables', :action => 'add_validator', :id => variable.id, :validator_id => validator.id}, :update => "variable-validators-holder") do %>
                  <%= submit_tag '&#8592;', {:class=>'add-validator', :title=>"Добавить валидатор к переменной"} %>
                <% end %>
              </td>
              <td>
                <%= validator.name %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </td>
  </tr>
  <tr>
    <td style="text-align: right; padding: 5px;"><%= link_to 'Создать и присоединить', {:controller => 'az_validators', :action => 'new', :owner_id =>  variable.owner_id, :az_variable_id => variable.id }, :class => "blue_link" %></td>
    <td style="text-align: right; padding: 5px;">&nbsp;</td>
  </tr>
</table>

