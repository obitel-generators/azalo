<% @az_c_images.each do |image| %>
  <tr>
    <td><%= image_tag(image.c_image.url(:tiny)) %></td>
    <td><%= text_field_tag(:url, image.c_image.url(:big)) %></td>
    <td><%=h image.owner_id %></td>
    <td><%=h image.az_c_image_category %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_az_c_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

