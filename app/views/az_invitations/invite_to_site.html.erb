<h1>Отправить приглашение на сайт</h1>

<% form_for(@az_invitation, :url => { :action => 'create_invitation_to_site' }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :hash_str %><br />
    <%= f.text_field :hash_str %>
  </p>
  <p>
    <%= f.label :invitation_type %><br />
    <%= f.text_field :invitation_type %>
  </p>
  <p>
    <%= f.label :invitation_data %><br />
    <%= f.text_field :invitation_data %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', az_invitations_path %>
  