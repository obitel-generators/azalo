<h1>Отправить приглашение на работу в компании &quot;<%= @cmp.name %>&quot;</h1>

<% form_for(@az_invitation, :builder => AzFormBuilder, :url => { :action => 'create_invitation_to_company' }) do |f| %>
  <p>
    Email приглашаемого человека<br />
    <%= f.text_field :email %>
  </p>
 
  <%= f.hidden_field :invitation_data %>
  <p>
    <%= f.submit 'Пригласить' %>
  </p>
<% end %>

<%= link_to t(:az_label_back), '/employees' %>
  