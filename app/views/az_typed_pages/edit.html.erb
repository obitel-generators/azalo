<h1>Страница <q><%= @az_page_type.az_page.name %></q> --- Тип <q><%= @az_page_type.az_base_data_type.name %></q> </h1>

<%= form_for(@az_page_type) do |f| %>
  <%= f.error_messages %>

  <table class="table">
    <tr>
      <td>
        Operations
      </td>
    </tr>
    <tr>
      <td>
        <%= f.check_box(:operation_create) %>
        <%= @az_page_type.get_operation_human_redable_name('c') %>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.check_box(:operation_read) %>
        <%= @az_page_type.get_operation_human_redable_name('r') %>
      </td>
    </tr>

    <tr>
      <td>
        <%= f.check_box(:operation_update) %>
        <%= @az_page_type.get_operation_human_redable_name('u') %>
      </td>

    </tr>
    <tr>
      <td>
        <%= f.check_box(:operation_delete) %>
        <%= @az_page_type.get_operation_human_redable_name('d') %>
      </td>
    </tr>
  </table>
  
  <p>
    <%= f.submit t(:az_label_save) %>
  </p>
<% end %>

<%= link_to 'Назад к странице', edit_az_page_path(@az_page_type.az_page) %> |
<%= link_to 'Назад к типу' %>
