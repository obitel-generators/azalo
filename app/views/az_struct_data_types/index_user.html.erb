<% @my_companies.each do |company| %>

  <%= item_list_header("Список структур", company, @my_companies.size > 1) %>

  <table class="table">
    <tr>
      <th><%= t(:az_label_name) %></th>
      <th><%= t(:az_label_description) %></th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>

  <% @structs[company].each do |dt| %>
    <tr>
      <td><%=h dt.name %></td>
      <td><%=h dt.description %></td>
      <td>
        <%= link_to(img_go_up, struct_move_up_path(dt)) %>
      </td>
      <td>
        <%= link_to(img_go_down, struct_move_down_path(dt)) %>
      </td>
      <td><%= link_to t(:az_label_edit), edit_az_struct_data_type_path(dt) %></td>
      <td><%= link_to t(:az_label_delete), dt, :confirm => t(:az_label_are_you_sure), :method => :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />

  
  <%= link_to 'Новая структура', :controller=>'az_struct_data_types', :action => 'new', :owner_id => company.id %>

<% end %>