<div class="commons-show">
  <table>
    <tr>
      <td class="param"><p><%= t(:az_label_name) %>:</p></td>
      <td class="value"><p><%=h @az_definition.name %></p></td>
    </tr>

    <tr>
      <td class="param"><p>Определение:</p></td>
      <td class="value"><%= RedCloth.new(n2e @az_definition.definition).to_html %></td>
    </tr>
  </table>

  <%= link_to t(:az_label_edit), edit_az_definition_path(@az_definition) %> |
  <% if @az_definition.az_base_project == nil %>
    <%= link_to t(:az_label_back), '/definitions' %>
  <% else %>
    <% controller = @az_definition.az_base_project.class.name.underscore.pluralize %>
    <%= link_to t(:az_label_back), :controller => controller, :action => 'edit', :id => @az_definition.az_base_project.id %>
  <% end %>
</div>
